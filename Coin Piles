

#include<bits/stdc++.h>

using namespace std;

 

void solve(){
	long a,b;

	cin >> a >> b;

	if(a==0 or b==0  )
	{
		if(a==0 and b==0)
			cout << "YES\n";
		else
		cout << "NO\n";
	}
	else if( floor(a/2)> b or (floor(b/2)>a))
	{
		cout << "NO\n";
	}
	else if((a+b)%3==0)
	{
		cout << "YES\n";
	}
	else{
		cout << "NO\n";
	}
}
int main(){

ios_base::sync_with_stdio(false);  
cin.tie(NULL); // flushes cout  
    
  
   int tt;

   cin >> tt;

   while(tt--)
   {
   	solve();
   }

}


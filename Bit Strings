
#include<bits/stdc++.h>

using namespace std;

 

int main(){

ios_base::sync_with_stdio(false);  
cin.tie(NULL); // flushes cout  
    
    int n;

    cin >> n;

    long long mod = 1000000007;
    long long ans = 2;
    n--;
    while(n--)
    {
    	ans = ( ans * 2 ) % mod;
    }
    cout << ans << endl;
}

 
